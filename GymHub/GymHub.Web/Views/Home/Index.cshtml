@model List<ProductCarouselViewModel>

@section ImportantLinks{
    <link href="~/css/HomePageProductsCarousel.css" rel="stylesheet" asp-append-version="true" />
}

<img class="main-home-image" src="/Home/HomeImage.jpg" />
<div class="main-home-title-container">
    <h1 class="main-home-title">Welcome to GymHub!</h1>
</div>
<div class="main-home-description-container">
    <p class="main-home-description">Looking for the best equipment to aid you in your training? Then you've come to the right place</p>
</div>
<div class="main-home-sales">
    <p class="main-home-sales-paragraph">Check out some of these products</p>
</div>

<div class="carousel-container-omega">
    <div class="carousel-container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li style="background-color:black" data-target="#carouselExampleIndicators" data-slide-to="0" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var productCarousel = Model[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img class="d-block w-100 carousel-image" src="@productCarousel.Image" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="color:black;">@productCarousel.Name:@productCarousel.Model</h5>
                            <p style="color:black;">@productCarousel.ShortDescription</p>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

