<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GymHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="/css/SomeCss.css" rel="stylesheet" />
    <link href="/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/bootstrap-grid.css" rel="stylesheet" />
</head>

<body class="body-container">
    <nav class="nav-bar">
        <div class="nav-bar-element nav-bar-home" style="float:left;">
            <a class="nav-bar-button" href="/">GymHub</a>
        </div>
        @if (this.User.Identity.IsAuthenticated == false)
        {
        <div class="nav-bar-element">
            <a class="nav-bar-button" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
        <div class="nav-bar-element">
            <a class="nav-bar-button" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
        }
        else
        {
        <form class="nav-bar-element" method="post" asp-area="Identity" asp-page="/Account/Logout">
            <button style="padding: 0px; border-width: 0px; height: 50px; width: 96px; cursor: pointer" class="nav-bar-button" type="submit">Logout</button>
        </form>
        <div class="nav-bar-element">
            <a class="nav-bar-button" asp-controller="Users" asp-action="Profile">Profile</a>
        </div>
        <div class="nav-bar-element">
            <a class="nav-bar-button" asp-controller="Products" asp-action="All">Shop</a>
        </div>
        <div class="nav-bar-element">
            <a class="nav-bar-button" asp-controller="Carts" asp-action="All">Cart</a>
        </div>
        }
    </nav>
    <main class="main-container">
        @RenderBody()
    </main>
    <footer>
        <p class="footer-paragraph">@@Copyright 2020 GymHub</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
