@model AddCategoryInputModel

<div class="input-container">
    <form asp-controller="Categories" asp-action="Create">
        <label asp-for="Name" class="input-label">Category Name</label>
        <input asp-for="Name" type="text" placeholder="Type name here" class="input-label category-add-name">
        <span asp-validation-for="Name" class="validation-span"></span>
        <div class="button-container">
            <button type="submit">Create Category</button>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial.cshtml">
}
